<div class="row">
 <div class="col-md-12">
 <h2>Departments <a href="/departments/add" class="btn btn-success pull-right lnk">Add New Department</a></h2>
 <hr>
 {{#if message}}
 <p>No Results</p>
 {{/if}}
 <div class="table-responsive">
    <table class="table">
                <thead>
                    <tr> 
                        <th> Department Number </th>
                        <th> Department Name </th>

                    </tr>
                </thead>
                <tbody>
                    {{#each departments}}
                        <tr>
                            <td><a href="/department/{{this.departmentId}}">{{this.departmentId}}</a></td>
                            <td><a href="/department/{{this.departmentId}}">{{this.departmentName}}</a></td>
                        </tr>
                    {{/each}}
                </tbody>
    </table>
 </div>
</div>